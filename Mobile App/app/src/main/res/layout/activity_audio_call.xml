<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/root_layout_audio_call"
        android:background="@color/colorBlack"
        tools:context=".activity.AudioCall">

    <android.widget.Chronometer
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:id="@+id/chronometer"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="80dp"
            android:textColor="@color/colorWhite"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center" android:visibility="invisible"/>

    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/call_end"
            android:id="@+id/endCall"
            android:background="@drawable/circle_img"
            android:layout_marginBottom="64dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/mute_mic"
            android:id="@+id/muteCall"
            android:background="@drawable/circle_img_secondary"
            app:layout_constraintEnd_toEndOf="@+id/chronometer"
            app:layout_constraintStart_toEndOf="@+id/speakerCall"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/endCall"/>
    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/speaker"
            android:id="@+id/speakerCall"
            android:background="@drawable/circle_img_secondary"
            app:layout_constraintTop_toTopOf="@+id/muteCall"
            app:layout_constraintBottom_toBottomOf="@+id/muteCall"
            app:layout_constraintStart_toStartOf="@+id/chronometer"
            android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>